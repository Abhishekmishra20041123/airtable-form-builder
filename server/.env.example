# Server Environment Variables

# Server Port
PORT=5000

# MongoDB Connection String
MONGO_URI=mongodb://localhost:27017/airtable-form-builder
# For production, use MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/airtable-form-builder

# Cookie Session Secret
COOKIE_KEY=your_random_secret_key_here

# Airtable OAuth Credentials
AIRTABLE_CLIENT_ID=your_airtable_client_id
AIRTABLE_CLIENT_SECRET=your_airtable_client_secret
AIRTABLE_REDIRECT_URI=http://localhost:5000/auth/airtable/callback
# For production:
# AIRTABLE_REDIRECT_URI=https://your-backend-domain.com/auth/airtable/callback

# Frontend URL (for redirect after login)
FRONTEND_URL=http://localhost:5173
# For production:
# FRONTEND_URL=https://your-frontend-domain.vercel.app
